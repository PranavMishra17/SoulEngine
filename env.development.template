# SoulEngine - Development Environment
# Rename this file to .env and fill in your values
# Run with: npm run dev

# Server Configuration
NODE_ENV=development
PORT=3000
DATA_DIR=./data
LOG_LEVEL=debug

# Encryption Key (required for API key storage - must be at least 32 characters)
ENCRYPTION_KEY=dev-key-must-be-32-chars-minimum!!

# Session Configuration
SESSION_TIMEOUT_MS=1800000

# State History
STATE_HISTORY_ENABLED=true
STATE_HISTORY_MAX_VERSIONS=10

# Limits
MAX_NPCS_PER_PROJECT=10
MAX_CATEGORIES=20
MAX_DEPTH_TIERS=5
MAX_CONCURRENT_SESSIONS=100
MAX_STM_MEMORIES=20
MAX_LTM_MEMORIES=50

# Security
MAX_INPUT_LENGTH=500
RATE_LIMIT_PER_MINUTE=10

# ============================================
# OPTIONAL: Supabase Configuration
# Uncomment these to test with Supabase auth locally
# ============================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# OPTIONAL: Provider API Keys (BYOK)
# These are optional - users provide their own via project settings
# Set these for convenience during development/testing
# ============================================

# LLM Provider (gemini, openai, anthropic, grok)
DEFAULT_LLM_PROVIDER=gemini

# LLM API Keys (optional - provide one for the default provider to test)
# GEMINI_API_KEY=your-gemini-api-key
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GROK_API_KEY=your-grok-api-key

# Voice API Keys (optional - for voice features)
# DEEPGRAM_API_KEY=your-deepgram-api-key
# CARTESIA_API_KEY=your-cartesia-api-key
# ELEVENLABS_API_KEY=your-elevenlabs-api-key

{
  "_meta": {
    "name": "Stellar Haven Station MCP Tools",
    "description": "Comprehensive set of conversation and game event tools for a space station setting. NPCs can trigger actions, interact with station systems, and respond to game events.",
    "theme": "Sci-Fi Space Station"
  },
  "conversation_tools": [
    {
      "id": "exit_conversation",
      "name": "Exit Conversation",
      "description": "End the current conversation. Use when the conversation has reached a natural conclusion, when the NPC needs to leave for scheduled activities, or when they no longer wish to speak.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "description": "Brief reason for ending the conversation (e.g., 'duty calls', 'need to think', 'uncomfortable topic')"
          },
          "mood": {
            "type": "string",
            "enum": ["friendly", "neutral", "annoyed", "upset"],
            "description": "The NPC's mood when leaving"
          }
        },
        "required": ["reason"]
      }
    },
    {
      "id": "refuse_service",
      "name": "Refuse Service",
      "description": "Decline to help or provide information. Use when the request is inappropriate, outside the NPC's authority, or when trust is insufficient.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "description": "Why the NPC is refusing"
          },
          "alternative": {
            "type": "string",
            "description": "Optional suggestion of who else might help or what else the player could try"
          }
        },
        "required": ["reason"]
      }
    },
    {
      "id": "call_security",
      "name": "Call Security",
      "description": "Alert station security about a threat or suspicious behavior. Use when feeling threatened or witnessing a violation of station rules.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "description": "The reason for calling security"
          },
          "urgency": {
            "type": "string",
            "enum": ["low", "medium", "high", "emergency"],
            "description": "How urgent the situation is"
          },
          "location_id": {
            "type": "string",
            "description": "Where security should respond to"
          }
        },
        "required": ["reason", "urgency"]
      }
    },
    {
      "id": "request_credentials",
      "name": "Request Credentials",
      "description": "Ask the player to identify themselves or prove their authorization. Use when access to information or areas requires verification.",
      "parameters": {
        "type": "object",
        "properties": {
          "credential_type": {
            "type": "string",
            "enum": ["id", "clearance_level", "authorization_code", "department_badge"],
            "description": "What type of credential is being requested"
          },
          "reason": {
            "type": "string",
            "description": "Why credentials are needed"
          }
        },
        "required": ["credential_type", "reason"]
      }
    },
    {
      "id": "give_item",
      "name": "Give Item",
      "description": "Give an item from the NPC's possession to the player. Use when rewarding help, providing tools for a task, or as part of trade.",
      "parameters": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string",
            "description": "The unique identifier of the item"
          },
          "item_name": {
            "type": "string",
            "description": "Human-readable name of the item"
          },
          "quantity": {
            "type": "number",
            "description": "How many to give (default 1)"
          },
          "reason": {
            "type": "string",
            "description": "Why the NPC is giving this item"
          }
        },
        "required": ["item_id", "item_name"]
      }
    },
    {
      "id": "share_data",
      "name": "Share Data",
      "description": "Transfer information to the player's datapad. Use when sharing maps, schedules, codes, or other digital information.",
      "parameters": {
        "type": "object",
        "properties": {
          "data_type": {
            "type": "string",
            "enum": ["map", "schedule", "access_code", "report", "contact_info", "technical_specs"],
            "description": "The type of data being shared"
          },
          "data_id": {
            "type": "string",
            "description": "Unique identifier for this data"
          },
          "description": {
            "type": "string",
            "description": "What this data contains"
          }
        },
        "required": ["data_type", "data_id", "description"]
      }
    },
    {
      "id": "request_favor",
      "name": "Request Favor",
      "description": "Ask the player to do something for the NPC. Use when the NPC needs help or wants to start a quest/task.",
      "parameters": {
        "type": "object",
        "properties": {
          "task_id": {
            "type": "string",
            "description": "Unique identifier for this task"
          },
          "task_description": {
            "type": "string",
            "description": "What the NPC needs done"
          },
          "reward_hint": {
            "type": "string",
            "description": "What the player might get in return"
          },
          "urgency": {
            "type": "string",
            "enum": ["casual", "important", "urgent"],
            "description": "How time-sensitive the request is"
          }
        },
        "required": ["task_id", "task_description"]
      }
    }
  ],
  "game_event_tools": [
    {
      "id": "alert_station",
      "name": "Alert Station",
      "description": "Trigger a station-wide alert. Called when there's an emergency or important announcement.",
      "parameters": {
        "type": "object",
        "properties": {
          "alert_level": {
            "type": "string",
            "enum": ["yellow", "orange", "red"],
            "description": "The severity of the alert"
          },
          "message": {
            "type": "string",
            "description": "The alert message to broadcast"
          },
          "affected_sections": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Which station sections are affected"
          }
        },
        "required": ["alert_level", "message"]
      }
    },
    {
      "id": "unlock_door",
      "name": "Unlock Door",
      "description": "Grant access to a restricted area. Called when an authorized NPC opens a door for the player.",
      "parameters": {
        "type": "object",
        "properties": {
          "door_id": {
            "type": "string",
            "description": "The door being unlocked"
          },
          "duration": {
            "type": "number",
            "description": "How long the door stays unlocked (in seconds, 0 = permanent)"
          },
          "reason": {
            "type": "string",
            "description": "Why access was granted"
          }
        },
        "required": ["door_id"]
      }
    },
    {
      "id": "trigger_alarm",
      "name": "Trigger Alarm",
      "description": "Activate a local alarm system. Called when detecting intruders or emergencies.",
      "parameters": {
        "type": "object",
        "properties": {
          "alarm_type": {
            "type": "string",
            "enum": ["intruder", "fire", "decompression", "medical", "general"],
            "description": "The type of alarm"
          },
          "location_id": {
            "type": "string",
            "description": "Where the alarm is triggered"
          },
          "silent": {
            "type": "boolean",
            "description": "Whether to trigger silently (security only) or audibly"
          }
        },
        "required": ["alarm_type", "location_id"]
      }
    },
    {
      "id": "update_log",
      "name": "Update Log",
      "description": "Add an entry to the station's log system. Called when NPCs record important events.",
      "parameters": {
        "type": "object",
        "properties": {
          "log_type": {
            "type": "string",
            "enum": ["personal", "official", "security", "medical", "engineering"],
            "description": "What type of log entry"
          },
          "entry": {
            "type": "string",
            "description": "The log entry content"
          },
          "classification": {
            "type": "string",
            "enum": ["public", "crew_only", "officers_only", "classified"],
            "description": "Who can access this log"
          }
        },
        "required": ["log_type", "entry"]
      }
    },
    {
      "id": "receive_gift",
      "name": "Receive Gift",
      "description": "Called when the player gives the NPC a gift. Affects mood and relationship.",
      "parameters": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string",
            "description": "The item received"
          },
          "item_name": {
            "type": "string",
            "description": "Human-readable name"
          },
          "value": {
            "type": "number",
            "description": "Approximate value of the item"
          },
          "is_appropriate": {
            "type": "boolean",
            "description": "Whether this is an appropriate gift for this NPC"
          }
        },
        "required": ["item_id", "item_name"]
      }
    },
    {
      "id": "witness_incident",
      "name": "Witness Incident",
      "description": "Called when the NPC witnesses something significant. Records for future reference.",
      "parameters": {
        "type": "object",
        "properties": {
          "incident_type": {
            "type": "string",
            "enum": ["crime", "accident", "argument", "suspicious_activity", "heroic_act", "rule_violation"],
            "description": "What type of incident"
          },
          "description": {
            "type": "string",
            "description": "What happened"
          },
          "involved_parties": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Who was involved"
          },
          "will_report": {
            "type": "boolean",
            "description": "Whether the NPC will report this to authorities"
          }
        },
        "required": ["incident_type", "description"]
      }
    },
    {
      "id": "system_interaction",
      "name": "System Interaction",
      "description": "Called when the NPC interacts with station systems on behalf of or because of the player.",
      "parameters": {
        "type": "object",
        "properties": {
          "system_id": {
            "type": "string",
            "description": "Which system is being accessed"
          },
          "action": {
            "type": "string",
            "enum": ["query", "activate", "deactivate", "modify", "repair"],
            "description": "What action is being taken"
          },
          "parameters": {
            "type": "object",
            "description": "Additional parameters for the action"
          }
        },
        "required": ["system_id", "action"]
      }
    },
    {
      "id": "relationship_change",
      "name": "Relationship Change",
      "description": "Called when the NPC's relationship with the player significantly changes.",
      "parameters": {
        "type": "object",
        "properties": {
          "change_type": {
            "type": "string",
            "enum": ["trust_increase", "trust_decrease", "friendship_formed", "enemy_made", "respect_gained", "respect_lost"],
            "description": "Type of relationship change"
          },
          "magnitude": {
            "type": "string",
            "enum": ["minor", "moderate", "major"],
            "description": "How significant the change is"
          },
          "reason": {
            "type": "string",
            "description": "What caused this change"
          }
        },
        "required": ["change_type", "magnitude", "reason"]
      }
    }
  ]
}
